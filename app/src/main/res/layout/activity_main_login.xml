<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:background="#DCDCE6">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="BIENVENIDO A TU APP DE CINE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtBienvenidoDos"
                android:textSize="30sp" android:textAlignment="center" android:textStyle="bold"
                android:textColor="#3F51B5"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/pantallacine"
                android:id="@+id/imageDos" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="Disfruta tus Beneficios!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtBeneficios" android:textColor="#3F51B5"
                android:textAlignment="center" android:textStyle="bold|italic"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtUsuario" android:textAlignment="center"
                android:textSize="24sp"/>
    </LinearLayout>
</LinearLayout>