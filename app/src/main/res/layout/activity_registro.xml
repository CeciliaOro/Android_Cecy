<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registro" android:orientation="vertical" android:layout_weight="1" android:background="#E9E9EE">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="349dp">
        <TextView
                android:text="¡Bienvenido!"
                android:layout_width="match_parent"
                android:layout_height="64dp" android:id="@+id/txtencabezado" android:textSize="40sp"
                android:textAlignment="center" android:textColor="#3F60B5" android:textStyle="bold"/>
        <ImageView
                android:src="@drawable/cine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/imageView2"/>
        ="@drawable/ic_launcher_background"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etUsuarioCine" android:hint="Escribe tu Nombre"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/etEdad" android:hint="Escribe tu Edad"
                android:textSize="18sp" android:ems="10"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/etSexo" android:hint="Escribe tu Género"
                android:textSize="18sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="39dp" android:id="@+id/etContraseña"
                android:hint="Escribe tu Contraseña" android:ems="10" android:textSize="18sp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Registrar Usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnRegistrar" android:textStyle="bold"
                    android:gravity="center|clip_vertical"
                    android:layout_gravity="clip_horizontal|center|clip_vertical|center_horizontal|center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>